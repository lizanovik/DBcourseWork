@using BLL_core.Pagination
@model BLL_core.Pagination.HomeViewModel
<div id="container" style="width:1100px;margin:0 auto;">
   
    <h2 class="text-center">Аксессуары</h2>
    <table class="table table-condensed">
        <tr>
            <th>Товар</th>
            <th>Производитель<a asp-controller="Home" asp-action="Accessories" asp-route-searchString="@Model.FilterModel.CurrentSearch" asp-route-sortState="@SortState.Firm" asp-route-sortOrder="@Model.SortModel.SortOrder" asp-route-page="@Model.PageViewModel.PageNumber"> &#8661;</a></th>
            <th>Цена<a asp-controller="Home" asp-action="Accessories" asp-route-searchString="@Model.FilterModel.CurrentSearch" asp-route-sortState="@SortState.Price" asp-route-sortOrder="@Model.SortModel.SortOrder" asp-route-page="@Model.PageViewModel.PageNumber"> &#8661;</a></th>
            <th>Изображение</th>
            <th>Количество</th>
        </tr>
        @Html.Partial("ProductsPartial")
    </table>


    @if (Model.PageViewModel.HasPreviousPage)
    {
        <a asp-action="Accessories"
           asp-route-page="@(Model.PageViewModel.PageNumber - 1)"
           asp-route-searchString="@Model.FilterModel.CurrentSearch"
           asp-route-sortOrder="@Model.SortModel.CurrentOrder"
           asp-route-sortState="@Model.SortModel.CurrentSort"
           class="btn btn-default btn">
            <i class="glyphicon glyphicon-chevron-left"></i>
            Предыдущая
        </a>
    }
    @if (Model.PageViewModel.HasNextPage)
    {
        <a asp-action="Accessories"
           asp-route-page="@(Model.PageViewModel.PageNumber + 1)"
           asp-route-sortOrder="@Model.SortModel.CurrentOrder"
           asp-route-sortState="@Model.SortModel.CurrentSort"
           asp-route-searchString="@Model.FilterModel.CurrentSearch"
           class="btn btn-default btn">
            Следующая
            <i class="glyphicon glyphicon-chevron-right"></i>
        </a>
    }
</div>


