@using EBooks.ViewModels.ManageViewModels
@model EBooks.ViewModels.ManageViewModels.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<h2 class="text-center">@ViewData["Title"]</h2>
<form asp-controller="Manage" asp-action="ForgotPassword" method="post" class="form-horizontal" style="margin: 10px">
    <h4 class="text-center">Enter your email.</h4>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Email" class="control-label">Enter your email</label>
        <input asp-for="Email" class="form-control"/>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info btn-block">Submit</button>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

