
@{
    ViewData["Title"] = "Your profile";
}
@using EBooks.ViewModels.ManageViewModels
@model EBooks.ViewModels.ManageViewModels.EditViewModel

<html>
<head>
    <title class="text-center">My profile</title>
    <style>
        .btn-link {
            text-align: center;
        }
    </style>
</head>
<body>
    <form asp-action="EditPersonalData" asp-controller="Manage" style="margin: 10px">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <input type="hidden" asp-for="Id" />
        </div>
        <div class="form-group">
            <label asp-for="Email" class="control-label">Email</label>
            <input type="text" asp-for="Email" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="PhoneNumber" class="control-label">Phone number</label>
            <input type="text" asp-for="PhoneNumber" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="City" class="control-label">City</label>
            <input type="text" asp-for="City" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Country" class="control-label">Country</label>
            <input type="text" asp-for="Country" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="FirstName" class="control-label">FirstName</label>
            <input type="text" asp-for="FirstName" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="LastName" class="control-label">LastName</label>
            <input type="text" asp-for="LastName" class="form-control" />
        </div>
        <div class="form-group">
            <input type="submit" value="Edit" class="btn btn-info btn-block" />
        </div>
    </form>
    <div clas="btn-link">
        <a asp-controller="Manage" asp-action="ChangePassword" class="btn-link">Change Password</a>
    </div>
</body>
</html>