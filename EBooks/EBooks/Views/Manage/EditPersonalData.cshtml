
@{
    ViewData["Title"] = "Мой профиль";
}
@using EBooks.ViewModels.ManageViewModels
@model EBooks.ViewModels.ManageViewModels.EditViewModel
    <html>
    <head>
        <title class="text-center">Мой профиль</title>
        <style>
            .btn-link {
                text-align: center;
            }
        </style>
    </head>
    <body>
        <div id="container" style="width:1100px;margin:0 auto;">
            <form asp-action="EditPersonalData" asp-controller="Manage" style="margin: 10px">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <input type="hidden" asp-for="Id" />
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label">Почтовый ящик</label>
                    <input type="text" asp-for="Email" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="PhoneNumber" class="control-label">Телефон</label>
                    <input type="text" asp-for="PhoneNumber" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="City" class="control-label">Город</label>
                    <input type="text" asp-for="City" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Country" class="control-label">Страна</label>
                    <input type="text" asp-for="Country" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="FirstName" class="control-label">Имя</label>
                    <input type="text" asp-for="FirstName" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="LastName" class="control-label">Фамилия</label>
                    <input type="text" asp-for="LastName" class="form-control" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Изменить" class="btn btn-info btn-block" />
                </div>
            </form>
            <div clas="btn-link">
                <a asp-controller="Manage" asp-action="ChangePassword" class="btn-link">Изменить пароль</a>
            </div>
        </div>
    </body>
</html>