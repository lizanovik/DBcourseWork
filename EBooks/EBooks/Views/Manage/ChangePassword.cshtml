
    @{
        ViewData["Title"] = "Изменить пароль";
    }
    @model EBooks.ViewModels.ManageViewModels.ChangePasswordViewModel
<div id="container" style="width:1100px;margin:0 auto;">
    <h2 class="text-center">Изменить пароль</h2>
    <form asp-controller="Manage" asp-action="ChangePassword">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="OldPassword" class="control-label">Старый пароль</label>
            <input asp-for="OldPassword" class="form-control" />
            <span asp-validation-for="OldPassword" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="NewPassword" class="control-labe;">Новый пароль</label>
            <input asp-for="NewPassword" class="form-control" />
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ConfirmPassword" class="control-label">Подтвердите пароль</label>
            <input asp-for="ConfirmPassword" class="form-control" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Изменить" class="btn btn-warning btn-block" />
        </div>
    </form>
</div>
