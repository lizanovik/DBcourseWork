@using EBooks.ViewModels.ManageViewModels
@model EBooks.ViewModels.ManageViewModels.ResetPasswordViewModel
@{
    ViewData["Title"] = "Сброс пароля";
}

<div id="container" style="width:1100px;margin:0 auto;">
    <h2 class="text-center">@ViewData["Title"]</h2>
    <h4 class="text-center">Сбросьте пароль</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post" style="margin: 10px">
                <div asp-validation-summary="All" class="text-danger"></div>
                <input asp-for="Code" type="hidden" />
                <div class="form-group">
                    <label asp-for="Email" class="control-label text-center"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label">Новый пароль</label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword" class="control-label">Подтвердить пароль</label>
                    <input asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-danger btn-block">Сбросить</button>
            </form>
        </div>
    </div>
    
</div>
    @section Scripts {
        @await Html.PartialAsync("_ValidationScriptsPartial")
    }
