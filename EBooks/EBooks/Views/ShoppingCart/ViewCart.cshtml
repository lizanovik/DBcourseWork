@model List<BLL_core.DTO.ProductModel>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <style>
        body {
            padding-top: 50px;
        }
        div {
            text-align: center;
        }
    </style>
</head>
<body>
<h1 class="text-center">Shopping Cart</h1>

@if (Model!=null )
{
    if (Model.Count != 0)
    {
        <table class="table ">
            <tr>
                <th>Title</th>
                <th>Price per item</th>
                <th>Amount</th>
                <th></th>
            </tr>
            @foreach (var product in Model)
            {
                <tr>
                    <td> @product.Title </td>
                    <td>@product.Price</td>
                    <td>
                        @product.Quantity
                    </td>
                    <td>
                        <form asp-controller="ShoppingCart" asp-action="RemoveFromCart" asp-route-id="@product.Id">
                            <input type="submit" value="Remove" class=" btn btn-info ">
                        </form>
                    </td>
                </tr>
            }
            <tr >
                <td colspan="4"><p class="text-center">Total cost - @ViewBag.Total</p></td>
            </tr>
        </table>
           
        <div >
            <a asp-controller="Order" asp-action="MakeOrder" class="btn-lg text-center">Make Order</a>
        </div>
    }
    else
    {
        <h2 class="text-center">Your cart is empty</h2>
    }
}
else
{
    <h2 class="text-center" >Your cart is empty</h2>
}
</body>
</html>
