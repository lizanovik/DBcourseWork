@model BLL_core.DTO.AddProductModel


<div id="container" style="width:1100px;margin:0 auto;">
    <form method="post" asp-controller="Admin" asp-action="AddProduct" style="margin: 10px">
        <div asp-validation-summary="ModelOnly"></div>
        <div style="text-align: left">
            <div class="form-group">
                <label asp-for="Title" class="control-label">Товар</label>
                <input asp-for="Title" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Описание</label>
                <input asp-for="Description" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label">Цена</label>
                <input asp-for="Price" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="AmountInStock" class="control-label">В наличии</label>
                <input asp-for="AmountInStock" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="ProductCategotyId" class="control-label">Категория</label>
                <select asp-for="ProductCategotyId" asp-items="@ViewBag.Categories"> </select>
            </div>
            <div class="form-group">
                <label asp-for="SupplierId" class="control-label">Производитель</label>
                <select asp-for="SupplierId" asp-items="@ViewBag.Suppliers"> </select>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label">Изображение</label>
                <input asp-for="Image" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Добавить" class=" btn btn-info btn-block" />
        </div>
    </form>
</div>
